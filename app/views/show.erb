<div class="container">
<div class="col-md-8 col-md-offset-2">
  <h2>Details for this <%= @ship.type_class%> class vessel</h2>

  <div class="content">
    <ul>
        <li>Affiliation: <%= @ship.affiliation%></li>
        <li>Type/class: <%= @ship.type_class%></li>
        <li>Sub-class: <%= @ship.sub_class%></li>
        <li>Top speed, warp factor: <%= @ship.top_speed%></li>
        <li>Crew complement: <%= @ship.crew%></li>
        <li>Notes: <%= @ship.note%></li>
        <li>Reference Agent: <%= @ship.agent.username%></li>
    </ul>
  </div>

  <% if @ship.agent == current_agent %>
    <a href="/ships/<%= @ship.id %>/edit"><button><h4>Edit this entry</h4></button></a>
    <a href="/ships/<%= @ship.id %>/delete"><button><h4>Delete</h4></button></a>
  <% end %>
  
    <a href="/ships"><button><h4>Return to index</h4></button></a>
  <a href="/logout"><button><h4>Log Out</h4></button></a></li>
  <a href="/"><button><h4>Home</h4></button></a>
  <br></br>

</div>
</div>